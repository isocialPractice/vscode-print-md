{
  "name": "vscode-print-md",
  "displayName": "Print Markdown",
  "description": "Right-click a Markdown file in the editor and print it using embedded Python engine.",
  "version": "0.0.1",
  "publisher": "isocialPractice",
  "icon": "icon.png",
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Other"],
  "activationEvents": ["onCommand:printMD.print"],
  "main": "./out/extension.js",
  "files": [
    "out/**",
    "src/views/**/*.htm",
    "src/printMD.py"
  ],
  "repository": {
    "type": "git",
    "url": "hhttps://github.com/isocialPractice/vscode-print-md"
  },
  "contributes": {
    "commands": [
      {
        "command": "printMD.print",
        "title": "Print Markdown"
      }
    ],
    "configuration": {
      "title": "Print Markdown",
      "properties": {
        "vscode-print-md.printer.select": {
          "type": "string",
          "default": "default",
          "enum": ["default", "last-used", "save-pdf"],
          "enumDescriptions": [
            "Always use the system default printer",
            "Remember and use the last selected printer",
            "Always save as PDF file instead of printing"
          ],
          "description": "Printer selection behavior when printing markdown files"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "printMD.print",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ],
      "webview/context": [
        {
          "command": "printMD.print",
          "when": "webviewId == 'markdown.preview'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "compile": "tsc -p ./",
    "install:python": "node scripts/install-python-deps.js",
    "postinstall": "npm run build && node -e \"console.log('\\nâœ“ Extension compiled successfully!\\n')\" && npm run install:python && node -e \"console.log('\\nðŸŽ‰ Setup complete! Press F5 to run the extension.\\n')\""
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/node": "^20.4.0",
    "@types/vscode": "^1.80.0"
  }
}
